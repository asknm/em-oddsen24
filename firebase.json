{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "react/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/getMatchDays",
        "function": "getMatchDays",
        "region": "europe-central2"
      },
      {
        "source": "/getMatchDayMatches",
        "function": "getMatchDayMatches",
        "region": "europe-central2"
      },
      {
        "source": "/updateMatch",
        "function": "updateMatch",
        "region": "europe-central2"
      }
    ]
  }
}
